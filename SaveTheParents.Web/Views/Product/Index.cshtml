@model IEnumerable<SaveTheParents.Models.Product.ProductListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Product Name
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
