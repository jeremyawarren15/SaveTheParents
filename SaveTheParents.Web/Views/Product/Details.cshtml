@using Microsoft.Ajax.Utilities
@using Microsoft.AspNet.Identity
@model SaveTheParents.Models.Product.ProductDetail

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>ProductDetail</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Product Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductName)
        </dd>

        <dt>
            UPC
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Upc)
        </dd>

        <dt>
            Description
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductDescription)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Back to List", "Index") |
    @Html.ActionLink("Write a review", "Create", "Review", new { id=Model.ProductId}, null)
</p>

<div class="container">
    @foreach (var item in Model.Reviews)
    {
        <div class="card text-white bg-primary mb-3 row">
            <div class="card-header">Review</div>
            <div class="card-body">
                <h4 class="card-title">@Html.DisplayFor(modelItem => item.ReviewTitle)</h4>
                <p class="card-text">@Html.DisplayFor(modelItem => item.ReviewText)</p>
            </div>
        </div>
    }
</div>
